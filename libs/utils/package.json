{
  "name": "@leav/utils",
  "version": "1.0.0-beta6",
  "description": "Shared utils and types to use across projects",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc --project tsconfig.esm.json & tsc --project tsconfig.json",
    "tscheck": "tsc --noEmit -p .",
    "tscheck:watch": "tsc -w --noEmit -p .",
    "test": "jest -c jest-config.json",
    "test:ci": "jest -c jest-config.json",
    "test:commit": "jest -c jest-config.json --maxWorkers=50% --findRelatedTests "
  },
  "main": "dist/esm/index",
  "author": "",
  "license": "LGPL3",
  "devDependencies": {
    "@types/jest": "29.0.2",
    "jest": "29.0.3",
    "ts-jest": "29.0.1",
    "typescript": "4.8.3"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "minimatch": "3.1.2"
  },
  "stableVersion": "1.0.0",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "default": "./dist/cjs/index.js"
  }
}
