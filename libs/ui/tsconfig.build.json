{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "composite": true,
    "module": "esnext",
    "skipLibCheck": true,
    "types": ["jest", "@types/jest", "@testing-library/jest-dom"],
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "paths": {
      "_ui/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.json"
  ],
  "exclude": ["**/*.test.*", "**/_tests"]
}
