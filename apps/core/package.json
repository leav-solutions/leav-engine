{
  "name": "core",
  "version": "1.0.0-beta",
  "description": "",
  "scripts": {
    "start:watch": "onchange -i 'src/**/*.ts'  -- npm run start:dev",
    "start:files": "onchange -i 'src/**/*.ts'  -- node --inspect=0.0.0.0:9230 -r ts-node/register src/ --filesManager",
    "start:indexation": "onchange -i 'src/**/*.ts'  -- node --inspect=0.0.0.0:9231 -r ts-node/register src/ --indexationManager",
    "start:dev": "node --inspect=0.0.0.0:9229 -r ts-node/register src/ --server",
    "start:build": "npm run build && node . --server",
    "test:watch": "jest -c jest-unit-config.json --watch",
    "test": "jest -c jest-unit-config.json",
    "test:e2e": "npm run test:e2e:api",
    "test:e2e:api": "NODE_ENV=test jest -c jest-e2e-api-config.json --forceExit --detectOpenHandles",
    "test:e2e:filesManager": "NODE_ENV=test jest -c jest-e2e-filesManager-config.json --forceExit --detectOpenHandles",
    "test:e2e:indexationManager": "NODE_ENV=test jest -c jest-e2e-indexationManager-config.json --forceExit --detectOpenHandles",
    "lint": "eslint --fix src/",
    "lint:test": "eslint src/",
    "lint:watch": "watch 'npm run lint' src/",
    "prettier": "prettier --write 'src/**/*.ts'",
    "dev": "run-p lint:watch start:watch test:watch",
    "db:migrate": "ts-node src/ --migrate",
    "import": "ts-node src/ import --clear",
    "buildapps": "ts-node src/ build-apps",
    "benchmark": "ts-node src/ benchmark",
    "build": "scripts/build.js",
    "tscheck": "tsc --noEmit -p .",
    "tscheck:watch": "tsc -w --noEmit -p ."
  },
  "author": "",
  "license": "LGPL3",
  "devDependencies": {
    "@elastic/elasticsearch-mock": "0.3.1",
    "@types/amqplib": "0.8.2",
    "@types/cacache": "15.0.1",
    "@types/debug": "0.0.31",
    "@types/elasticsearch": "5.0.40",
    "@types/glob": "5.0.37",
    "@types/graphql-upload": "8.0.10",
    "@types/i18next-fs-backend": "1.1.2",
    "@types/jest": "25",
    "@types/jest-when": "3.5.2",
    "@types/jsonwebtoken": "8.5.9",
    "@types/lodash": "4.14.185",
    "@types/node": "18.7.18",
    "@types/uuid": "7.0.5",
    "@types/winston": "2.3.9",
    "apollo-server-testing": "2.26.0",
    "axios": "0.27.2",
    "jest": "25",
    "jest-cli": "25",
    "jest-when": "3.5.1",
    "license-check-and-add": "3.0.5",
    "lint-staged": "7.3.0",
    "moment-timezone": "0.5.37",
    "nodemon": "1.19.4",
    "npm-run-all": "4.1.5",
    "onchange": "4.1.0",
    "prettier": "1.19.1",
    "ts-jest": "25",
    "ts-node": "6.2.0",
    "typescript": "4.1.5",
    "watch": "1.0.2"
  },
  "dependencies": {
    "@elastic/elasticsearch": "7.17.0",
    "@leav/app-root-path": "workspace:libs/app-root-path",
    "@leav/config-manager": "workspace:libs/config-manager",
    "@leav/message-broker": "workspace:libs/message-broker",
