{
    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "transform": {
        "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "src\/__tests__\/e2e\/api\/.*(.test.ts)$",
    "globalSetup": "./src/__tests__/e2e/api/globalSetupHook.ts",
    "globalTeardown": "./src/__tests__/e2e/api/teardown.js",
    "setupFiles": [
        "<rootDir>/src/__tests__/setup.ts",
        "<rootDir>/src/__tests__/jestUtils.ts"
    ],
    "testTimeout": 30000,
    "moduleNameMapper": {
        "^@leav/(.*)$": "<rootDir>/../../libs/$1/src"
    }
}