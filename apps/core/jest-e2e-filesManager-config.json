{
    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "transform": {
        "\\.(ts|tsx)$": [
            "ts-jest",
            {
                "isolatedModules": true
            }
        ]
    },
    "testRegex": "src\/__tests__\/e2e\/filesManager\/.*(.test.ts)$",
    "globalSetup": "./src/__tests__/e2e/filesManager/globalSetupHook.js",
    "setupFiles": [
        "<rootDir>/src/__tests__/setup.ts",
        "<rootDir>/src/__tests__/jestUtils.ts"
    ],
    "moduleNameMapper": {
        "^@leav/(.*)$": "<rootDir>/../../libs/$1/src"
    }
}